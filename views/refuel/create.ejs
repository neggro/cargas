<% include ../head %>

    <div class="container">

        <h1>Ingresar una recarga</h1>

        <form class="form-horizontal" role="form" action="/refuels/create" method="post">
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="input-group">
                        <span class="input-group-addon">$</span>
                        <input type="number" class="form-control" name="cost" id="cost" placeholder="Costo">
                        <span class="input-group-addon">.00</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="input-group">
                        <span class="input-group-addon">lts</span>
                        <input type="number" class="form-control" name="capacity" id="capacity" placeholder="Capacidad">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="input-group">
                        <span class="input-group-addon">km</span>
                        <input type="number" class="form-control" name="kilometers" id="kilometers" placeholder="Capacidad">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-default">Ingresar</button>
                </div>
            </div>
        </form>
    </div>

<% include ../foot %>