<% include ../../../views/head %>

<form action="/signup" method="post">
    <div class="input-group">
        <div class="input-row">
            <label>First Name</label>
            <input type="text" name="first_name" placeholder="Nicolas">
        </div>
        <div class="input-row">
            <label>Last Name</label>
            <input type="text" name="last_name" placeholder="Montesdeoca">
        </div>
        <div class="input-row">
            <label>Email</label>
            <input type="email" name="email" placeholder="nico@cargas.com">
        </div>
        <div class="input-row">
            <label>Password</label>
            <input type="password" name="password" placeholder="secret">
        </div>
        <button class="button-block">Entrar</button>
    </div>
</form>

<a href="/auth/twitter" data-ignore="push">Twitter</a>
<a href="/auth/facebook" data-ignore="push">Facebook</a>
