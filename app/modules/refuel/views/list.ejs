<% include ../../../views/head %>

    <ul class="list">
        <% for (var i = 0, length = refuels.length; i < length; i++) { %>
        <li>
            <strong>$<%= refuels[i].get('cost') %></strong>
            <p><%= refuels[i].get('kilometers') %> kms</p>
            <p><%= refuels[i].get('capacity') %> lts</p>
            <p><%=: refuels[i].get('date') | date %></p>
            <a href="/refuels/<%= refuels[i].get('_id') %>/edit" class="button edit">Editar</a>
            <a href="/refuels/<%= refuels[i].get('_id') %>/delete" class="button-negative">Eliminar</a>
        </li>
        <% } %>
    </ul>

