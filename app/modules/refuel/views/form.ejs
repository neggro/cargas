<% include ../../../views/head %>

    <% var action = refuel ? '/refuels/' + refuel.get('_id') + '/edit' : '/refuels/create' %>

    <form class="form" action="<%= action %>" method="post">

        <div class="input-group">
            <div class="input-row">
                <label>Costo $</label>
                <input type="number" name="cost" placeholder="1620" value="<%= refuel ? refuel.get('cost') : '' %>">
            </div>
            <div class="input-row">
                <label>Capacidad lts</label>
                <input type="number" name="capacity" placeholder="45" value="<%= refuel ? refuel.get('capacity') : '' %>">
            </div>
            <div class="input-row">
                <label>Kilometraje kms</label>
                <input type="number" name="kilometers" placeholder="560" value="<%= refuel ? refuel.get('kilometers') : '' %>">
            </div>
            <% if (refuel) { %>
            <div class="input-row">
                <label>Fecha</label>
                <input type="date" name="date" placeholder="16/12/2013" value="<%= refuel ? refuel.get('html_date'): '' %>">
            </div>
            <% } %>
        </div>
        <button class="button button-block">Entrar</button>
    </div>

<% include ../../../views/foot %>